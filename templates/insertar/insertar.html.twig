<!DOCTYPE html>

<title>Libro</title>

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        *{
            background-color: #1e293b;
            color: #0dcaf0;
        }
    </style>

    <div class="example-wrapper">
        <h1>AÃ±adir Libro</h1>

        {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            <div class="col-xs-6">
                {{ form_row(form.titulo, {'attr': {'class':'form-control'}}) }}
            </div>
            <div class="col-xs-6">
                {{ form_row(form.autor, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_row(form.precio, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_row(form.editorial, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_row(form.Send, {'attr': {'class':'pull-right btn btn-lg sr-button'}}) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}